<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_delete_text"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_47sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_bold"
        android:textSize="@dimen/_20sdp"
        android:text="Are You Sure You Want To Buy This Item?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_text"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_no"
            android:layout_width="@dimen/_113sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/btn_orange"
            android:fontFamily="@font/raleway_bold"
            android:text="No"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_yes"
            android:layout_width="@dimen/_113sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/btn_green_dialog"
            android:fontFamily="@font/raleway_bold"
            android:text="Yes"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>