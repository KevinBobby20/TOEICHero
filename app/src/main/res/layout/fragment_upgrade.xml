<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".View.Home.UpgradeFragment">

    <ImageView
        android:id="@+id/upgradeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_34sdp"
        android:id="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upgradeBack"
        android:text="Upgrade"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/curr_logo"
        app:layout_constraintRight_toLeftOf="@+id/upgradeMoney"
        app:layout_constraintTop_toBottomOf="@id/upgradeBack" />

    <TextView
        android:id="@+id/upgradeMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/raleway_bold"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upgradeBack" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_190sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_190sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/upgradeImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/first_skin"
        android:id="@+id/skin"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/first_clothes"
            android:id="@+id/clothes"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upgradeImg"
        android:text="Skin: Water (1x Score)"
        android:id="@+id/skinExp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/raleway_bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skinButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/skinExp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_orange"
        android:text="Upgrade Skin"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_bold"
        android:textSize="@dimen/_21sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skinButton"
        android:text="Clothes: Jersey (1x Coin)"
        android:id="@+id/clothesExp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/raleway_bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clothesButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/clothesExp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_orange"
        android:text="Upgrade Clothes"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_bold"
        android:textSize="@dimen/_21sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>