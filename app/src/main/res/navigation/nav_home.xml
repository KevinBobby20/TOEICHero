<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.toeichero.project.View.Home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_shopFragment"
            app:destination="@id/shopFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_rankFragment"
            app:destination="@id/rankFragment" />
        <action
            android:id="@+id/action_homeFragment_to_upgradeFragment"
            app:destination="@id/upgradeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.toeichero.project.View.Home.ShopFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.toeichero.project.View.Home.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_changeFragment"
            app:destination="@id/changeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/rankFragment"
        android:name="com.toeichero.project.View.Home.RankFragment"
        android:label="fragment_rank"
        tools:layout="@layout/fragment_rank" />
    <fragment
        android:id="@+id/changeFragment"
        android:name="com.toeichero.project.View.Home.ChangeFragment"
        android:label="fragment_change"
        tools:layout="@layout/fragment_change" >
        <action
            android:id="@+id/action_changeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/upgradeFragment"
        android:name="com.toeichero.project.View.Home.UpgradeFragment"
        android:label="fragment_upgrade"
        tools:layout="@layout/fragment_upgrade" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.toeichero.project.View.Home.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_listenSectionFragment"
            app:destination="@id/listenSectionFragment" />
        <action
            android:id="@+id/action_categoryFragment_to_readSectionFragment"
            app:destination="@id/readSectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/listenSectionFragment"
        android:name="com.toeichero.project.View.Home.ListenSectionFragment"
        android:label="fragment_listen_section"
        tools:layout="@layout/fragment_listen_section" />
    <fragment
        android:id="@+id/readSectionFragment"
        android:name="com.toeichero.project.View.Home.ReadSectionFragment"
        android:label="fragment_read_section"
        tools:layout="@layout/fragment_read_section" />
</navigation>